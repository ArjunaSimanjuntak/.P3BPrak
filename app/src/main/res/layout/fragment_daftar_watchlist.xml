<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/judul_list"
        android:textSize="@dimen/ukuran_judul_list"
        android:layout_marginStart="@dimen/marginStart_judul" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginStart="@dimen/marginStart_separator"
        android:layout_marginEnd="@dimen/marginEnd_separator">
    </View>

<!--    kenapa <View > </View> ?
        knp gak <View /> ?-->
    <!--Jawab : sama aja bosku wkwk-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/list_Movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_add_fab"
            android:layout_gravity="bottom|end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_fab"
            android:contentDescription="@string/add"
            android:src="@drawable/ic_android_custom_add"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</LinearLayout>