<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ukuran_poster"
        android:src="@drawable/ic_android_custom_add"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/judul_list"
        android:textSize="@dimen/ukuran_judul_list"
        android:layout_marginStart="@dimen/marginStart_judul" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginStart="@dimen/marginStart_separator"
        android:layout_marginEnd="@dimen/marginEnd_separator">
    </View>


</LinearLayout>