<?xml version="1.0" encoding="utf-8"?><!--drawer layout mesti jd root viewgroup kl mau dipake-->
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!--    terbagi jd 3-->
    <!--    1. layout utama-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <!--Toolbar-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


<!--        disambungkan sbg 'dynamic fragment' dgn kelas main fragment?-->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- 2. Left Drawer -->
    <RelativeLayout
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">

<!--        static fragment-->
<!--        mesti 4 isinya-->
        <fragment
            android:id="@+id/fragmen1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:name="com.example.t03.LeftFragment"/>

    </RelativeLayout>

    <!-- 3. Right Drawer -->

    <RelativeLayout
        android:id="@+id/right_drawer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <!--        static fragment-->
        <fragment
            android:id="@+id/fragmen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:name="com.example.t03.RightFragment"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
